        <Button x:Name="AceptarButton" Content="Aceptar" HorizontalAlignment="Left" Margin="285.5,187,0,0" VerticalAlignment="Top" Width="110" Height="41" Click="AceptarButton_Click" Grid.Column="3"/>
        <Button x:Name="LimpiarButton" Content="Limpiar&#xD;&#xA;" HorizontalAlignment="Left" Margin="415,187,0,0" VerticalAlignment="Top" Width="117" Height="41" Click="LimpiarButton_Click" Grid.Column="3"/>
        <TextBlock HorizontalAlignment="Left" Margin="57,155,0,0" TextWrapping="Wrap" Text="Nombre" VerticalAlignment="Top" Height="34" Width="100" FontSize="20" Grid.Column="2" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
